{
  "shortName": "LoomSE Template Script",
  "longName": "",
  "author": "Franco Speziali",
  "description": "A sample script to demonstrate the capabilities of Loom",
  "firstScene": "shore",
  "scenes": {
    "shore": {
      "longName": "",
      "video": {
        "autoplay": true,
        "muted": true,
        "subtitles": "subs.srt",
        "sources": {
          "mp4": "assets/mp4/shore.mp4"
        }
      },
      "events": [
        {
          "pluginName": "showContentWithLogo",
          "in": 0,
          "out": 11000,
          "payload": {
            "text": "Loom Story Engine"
          }
        },
        {
          "pluginName": "skipTo",
          "in": 11000,
          "out": 11000,
          "payload": {
            "nextScene": "dolphins"
          }
        }
      ]
    },
    "dolphins": {
      "longName": "",
      "video": {
        "autoplay": true,
        "muted": true,
        "sources": {
          "mp4": "assets/mp4/dolphins.mp4"
        }
      },
      "events": [
        {
          "pluginName": "showContent",
          "in": 500,
          "out": 4000,
          "payload": {
            "text": "This text is not part of the video file"
          }
        },
        {
          "pluginName": "showContent",
          "in": 4500,
          "out": 9500,
          "payload": {
            "text": "It is generated from an event"
          }
        },
        {
          "pluginName": "skipTo",
          "in": 10000,
          "out": 10000,
          "payload": {
            "nextScene": "shore"
          }
        }
      ]
    }
  }
}
